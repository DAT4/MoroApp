<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontPageFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/a"/>

            <Button
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/lige_nu_button"
                android:layout_width="wrap_content"
                android:fontFamily="@font/anton_regular"
                android:id="@+id/lige_nu"
                android:layout_height="wrap_content"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:id="@+id/find_event_button"
                android:background="@drawable/find_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANBEFALET TIL DIG"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/anton_regular"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="30dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/front_page_list"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>
