<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RightNowFragment"
    android:background="#A8DEF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/liste"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="62dp"
                    android:text="Lige Nu"
                    android:textSize="40sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="left">
                        <Button
                            android:layout_width="164dp"
                            android:layout_height="34dp"
                            android:text="Tilbage"
                            android:id="@+id/right_now_back"
                            android:background="#1F3A7D"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:text="L"
                       />

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="G"
                        />

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="M"
                       />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <fragment
                        android:layout_height="match_parent"
                        android:id="@+id/event_card"
                        android:name="dtu.android.moroapp.EventCardFragment"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_weight="2" />

                    <fragment
                        android:layout_height="match_parent"
                        android:id="@+id/event_cardone"
                        android:name="dtu.android.moroapp.EventCardFragment"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <fragment

                            android:layout_height="match_parent"
                            android:id="@+id/event_cardtwo"
                            android:name="dtu.android.moroapp.EventCardBlockFragment"
                            android:layout_width="160dp"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="13dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="2" />

                        <fragment
                            android:layout_height="match_parent"
                            android:id="@+id/event_cardthree"
                            android:name="dtu.android.moroapp.EventCardBlockFragment"
                            android:layout_width="160dp"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="13dp"
                            android:layout_weight="2" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>