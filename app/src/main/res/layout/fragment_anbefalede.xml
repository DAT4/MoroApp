<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnbefaledeFragment"
    android:background="#FAB96B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/anbefalet_liste"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="278dp"
                        android:layout_height="62dp"
                        android:text="@string/anbefalede_events"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/anton_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <fragment
                        android:layout_height="match_parent"
                        android:id="@+id/event_card_3"
                        android:name="dtu.android.moroapp.EventCardFragment"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_weight="2" />

                    <fragment
                        android:layout_height="match_parent"
                        android:id="@+id/event_card_4"
                        android:name="dtu.android.moroapp.EventCardFragment"
                        android:layout_width="match_parent"
                        android:layout_marginTop="13dp"
                        android:layout_weight="2" />

                    <Space
                        android:layout_width="1dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>