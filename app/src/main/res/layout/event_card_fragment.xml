<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/event_card_long"
    android:background="#C4C4C4"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/event_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE PÃ… EVENT"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <Button
                android:id="@+id/addEventToSaved"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_cross" />

        </RelativeLayout>

        <LinearLayout

            android:layout_weight="2"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:background="@color/colorIconBlue"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            >

            <TextView
                android:id="@+id/event_card_long_place"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/colorWhite"
                android:includeFontPadding="false"
                android:fontFamily="@font/anton_regular"
                android:text="10,1 km"
                />
            <TextView
                android:id="@+id/event_card_long_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:includeFontPadding="false"
                android:fontFamily="@font/anton_regular"
                android:text="DATO"
                />

            <TextView
                android:id="@+id/event_card_long_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:gravity="right"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/anton_regular"
                android:text="00:00 - 00:00"
                />

        </LinearLayout>


    </LinearLayout>

