<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_long"
    android:background="#C4C4C4"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/event_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE PÃ… EVENT"
                android:textAlignment="center"
                android:fontFamily="@font/anton_regular"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </RelativeLayout>

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorIconBlue"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="1"
            tools:context=".GridXMLActivity">

            <TextView
                android:id="@+id/event_card_long_place"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_columnWeight="1"
                android:text="10,1 km"
                android:fontFamily="@font/anton_regular"
                android:textAlignment="viewStart"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/event_card_long_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_columnWeight="1"
                android:text="DATO"
                android:fontFamily="@font/anton_regular"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/event_card_long_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_columnWeight="1"
                android:text="00:00 - 00:00"
                android:fontFamily="@font/anton_regular"
                android:textAlignment="textEnd"
                android:textColor="@color/colorWhite" />

        </GridLayout>


    </LinearLayout>

