<resources>
    <!-- Base application theme. -->

    <style name="Find_where_tabs_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/anton_regular</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorBlack</item>
        <item name="itemFillColor">@color/colorIconBlue</item>
        <item name="itemIconTint">@color/colorWhite</item>
        <item name="itemTextColor">@color/colorFrontPage</item>
    </style>

    <style name="Theme.Custom" parent="android:Theme">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorBlack</item>
        <item name="android:weekNumberColor">@color/colorBlack</item>
        <!--<item name="android:weekDayTextAppearance">style/TextAppearance.Medium</item>
        <item name="android:dateTextAppearance">style/TextAppearance.Medium</item>-->
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>